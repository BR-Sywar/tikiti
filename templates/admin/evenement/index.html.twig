{% extends 'admin/admin.html.twig' %}



{% block body %}        
              <div class="row mt">
    <div class="col-lg-12">
            <h2><i class="fa fa-angle-right"></i> Liste d'Événements </h2> <br>
    <div class="form-panel">
    <div class="table-responsive-xl">
            <table class="table">
                <thead>
           
                    <tr>
                     <th> Titre </th>
                     <th> DateDebut </th>
                     <th> DateFin </th>
                     <th> HeureDebut </th>
                     <th> HeureFin </th>
                     <th> Action </th>
                    </tr>
                </thead>

        <tbody> 
           {%for event in evenements %} 
                <tr>   
                    <td>{{event.Titre}}</td> 
                    <td>{{event.dateDebut}}</td>
                    <td>{{event.dateFin}}</td>
                    <td>{{event.heureDebut}}</td>
                    <td>{{event.heureFin}}</td>
                </tr>
                <td><a href="{{ path('evenement_edit', {'id': event.entreprise.id }) }}" class="btn btn-success">Edit</a>
                  <form method="post" action="{{ path('evenement_delete', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                   <input type="hidden" name="_method" value="DELETE">
                   <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                   <button class="btn btn-danger">Delete</button>
            </form> 
             {% endfor %}
        </tbody>
    </table>
    
    </div>
    </div>
            <!-- /form-panel -->
    </div>
          <!-- /col-lg-12 -->
    </div>
         
{% endblock %}