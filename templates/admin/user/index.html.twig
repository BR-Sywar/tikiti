{% extends 'admin/admin.html.twig' %}

{% block body %}
      
<div class="row mt">
          <div class="col-lg-12">
            <h4><i class="fa fa-angle-right"> Users </i></h4>
            <div class="form-panel">
              <div class="table-responsive-xl">
  <table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Ville</th>
            <th> action </th>

           
        </tr>
    </thead>

    <tbody>
        {% for user in users %}
          {% if user.username != 'admin' %}
            <tr>
                <td>{{user.nom}}</td>
                <td>{{user.prenom}}</td>
                <td>{{user.email}}</td>
                <td>{{user.tel}}</td>
                <td>{{user.Ville}}</td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id }) }}" class="btn btn-success">edit</a>
    
        </td>
          <td>
        <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button class="btn btn-success">Delete</button>
        </form>
      </td>
            </tr>
            {% endif %}
        {% endfor %}
    </tbody>
    
</table>



</div>
            </div>
            <!-- /form-panel -->
          </div>
          <!-- /col-lg-12 -->
        </div>



{% endblock %}