{% extends 'admin/admin.html.twig' %}

{% block body %}

<div class="row mt">
          <div class="col-lg-12">
            <h2><i class="fa fa-angle-right"></i> Liste des Entreprises </h2>
            <div class="form-panel">
              <div class="table-responsive-xl">
  <table class="table">
    <thead>
        <tr>
            <th>username</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>adresse</th>
            <th>ville</th>
            <th>codePostale</th>      
            <th>Logo</th>
            <th>action</th>
        </tr>
    </thead>
    <tbody>
        {%for userPro in entreprises %}
          <tr>
            <td>{{userPro.user.username}}</td>
            <td>{{userPro.user.email}}</td>
            <td>{{userPro.user.tel}}</td>
            <td>{{userPro.user.adresse}}</td>
            <td>{{userPro.user.ville}}</td>
            <td>{{userPro.user.codePostale}}</td>  

            <td><img src="{{asset('uploads/entreprises/images/'~ userPro.UrlLogo)}}" height="100" width="100"></td>
            
            <td>
              <div style="display: flex; font-size: large;">
                <a href="{{ path('entreprise_edit', {'id': userPro.id }) }}" class="btn btn-warning fa fa-edit"></a>

                <form method="post" action="{{ path('entreprise_delete', {'id': userPro.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                      <input type="hidden" name="_method" value="DELETE">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ userPro.id) }}">
                      <button class="btn btn-danger fa fa-trash-o"></button>
                </form>
                
                <a href="{{ path('evenement_index', {'id': userPro.id }) }}" class="btn btn-info fa fa-calendar"></a>
                <a href="{{ path('horaire_index', {'id': userPro.id }) }}" class="btn btn-primary fa fa-clock-o"></a>
              </div>
          </td>
       </tr>
        {% endfor %}
         
    </tbody>
    
</table>
</div>
            </div>
            <!-- /form-panel -->
          </div>
          <!-- /col-lg-12 -->
        </div>



       
{% endblock %}