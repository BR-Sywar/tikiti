{% extends 'admin/admin.html.twig' %}



{% block body %}    
 
              <div class="row mt">
    <div class="col-lg-12">
            <h2><i class="fa fa-angle-right"></i> Les Horaire De Travail de l'entreprise {{nomEntreprise}}</h2> <br>
    <div class="form-panel">
    <div class="table-responsive-xl">
            <table class="table">
                <thead>
           
                    <tr>
                    <th> Jour Debut </th>
                     <th> Jour Fin </th>
                     <th> Heure Debut AM </th>
                     <th> Heure Fin AM </th>
                     <th> Heure Debut PM </th>
                     <th> Heure Fin PM </th>
                     <th> Action </th>
                     
                     </tr>
                     
                    
                </thead>

        <tbody> 
        <div style="display: flex; font-size: large;">
             <a href="{{ path('horaire_new', {id: entrepriseId} )}}" class="btn btn-success fa fa-plus"> Ajouter </a>
             </div>  
           {%for heure in horaire_travails %} 
                <tr>   
                    
                    <td>{{heure.jourDebut }}</td>
                    <td>{{heure.jourFin }}</td>
                    <td>{{heure.heureDebutMatin}}</td>
                    <td>{{heure.heureFinMatin}}</td>
                    <td>{{heure.heureDebutAp}}</td>
                    <td>{{heure.heureFinAp}}</td>
                <td>
                     <div style="display: flex; font-size: large;">
                        <a href="{{ path('horaire_edit', {'id': heure.id }) }}" class="btn btn-warning fa fa-edit "></a>
                        <form method="post" action="{{ path('horaire_delete', {'id': heure.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ heure.id) }}">
                            <button class="btn btn-danger fa fa-trash-o"></button>
                        </form> 
                       
                    </div>
                </td>
            </tr>
                       
             {% endfor %}
             
                 
        </tbody>
    </table>
    
    </div>
    </div>
            <!-- /form-panel -->
    </div>
          <!-- /col-lg-12 -->
    </div>
         
{% endblock %}