
{% extends 'admin/admin.html.twig' %}
{% block title %} Calendrier{% endblock %}

{% block stylesheets %}

  <link rel="stylesheet" type="text/css" href="{{ asset('admin/lib/bootstrap-datepicker/css/datepicker.css') }}" />
  <link rel="stylesheet" type="text/css" href="{{ asset('admin/lib/bootstrap-daterangepicker/daterangepicker.css') }}" />
  <link rel="stylesheet" type="text/css" href="{{ asset('admin/lib/bootstrap-timepicker/compiled/timepicker.css') }}" />
  <link rel="stylesheet" type="text/css" href="{{ asset('admin/lib/bootstrap-datetimepicker/datertimepicker.css') }}" />

{% endblock %} 

{% block body %}
<div class="row mt">
          <!--  DATE PICKERS -->
<div class="col-lg-12">
<div class="form-panel">
    <section id="main-content">
    <section class="wrapper">
    <div class="row mt">
          <!--  DATE PICKERS -->
        <div class="col-lg-12">
            <label class="control-label col-md-3">Date Range</label>
                <div class="col-md-4">
                    <div class="input-group input-large" data-date="01/01/2014" data-date-format="mm/dd/yyyy">
                      <input type="text" class="form-control dpd1" name="from">
                      <span class="input-group-addon">To</span>
                      <input type="text" class="form-control dpd2" name="to">
                    </div>
                    <span class="help-block">Select date range</span>
                </div>
        </div>
        <div class="col-lg-12">
                  <label class="control-label col-md-3">24hr Timepicker</label>
                <div class="col-md-4">
                <div class="input-group bootstrap-timepicker">
                      <input type="text" class="form-control timepicker-24">
                      <span class="input-group-btn">
                        <button class="btn btn-theme04" type="button"><i class="fa fa-clock-o"></i></button>
                        </span>
                </div>
                </div>
           
        </div>
    </div> 
      </section>
      </section>
</div>
</div>
</div>
    
    <a href="{{ path('calendrier_index') }}" class="btn btn-success">back to list</a>

    <button class="btn">{{ button_label|default('Save') }}</button>

{% endblock %}

{% block javascripts %}

  <script src="{{ asset('admin/lib/jquery-ui-1.9.2.custom.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('admin/lib/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>
  <script type="text/javascript" src="{{ asset('admin/lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js') }}"></script>
  <script type="text/javascript" src="{{ asset('admin/lib/bootstrap-timepicker/js/bootstrap-timepicker.js') }}"></script>
  <script src="{{ asset('admin/lib/advanced-form-components.js') }}"></script>

{% endblock %}