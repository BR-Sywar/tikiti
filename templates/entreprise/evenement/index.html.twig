{% extends 'entreprise/userPro.html.twig' %}
{% block body %}    
<div class="col-lg-12"> 

<div class="card bg-gray-100 mb-20 d-inline-block col-lg-12 " style="max-width: 29rm;">

<br>
    <h1> Les événements</h1> <br>
    <div class="form-panel">
    <div class="table-responsive-xl">
            <table class="table">
                <thead>
           
                    <tr>
                     <th> Titre </th>
                     <th> DateDebut </th>
                     <th> DateFin </th>
                     <th> HeureDebut </th>
                     <th> HeureFin </th>
                     <th> Action </th>
                     
                     </tr>
                     
                    
                </thead>

        <tbody> 
           {%for event in evenements %} 
                <tr>   
                    <td>{{event.Titre}}</td> 
                    <td>{{event.dateDebut |date('d-m-y') }}</td>
                    <td>{{event.dateFin |date('d-m-y') }}</td>
                    <td>{{event.heureDebut}}</td>
                    <td>{{event.heureFin}}</td>
                <td>
                     <div style="display: flex; font-size: large;">
                        <a href="{{ path('evenement_edit_front', {'id': event.id }) }}" class="btn btn-warning fa fa-edit "></a>
                        <form method="post" action="{{ path('evenement_delete_front', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                <button class="btn btn-danger">
                                    <i class="fa fa-trash "></i> 
                                    </button>
                            </form> 
                    </div>
                </td>
            </tr>
                       
             {% endfor %}
        <div style="display: flex; font-size: large;"> 
         <a href="{{ path('evenement_new_front', {id: entrepriseId} )}}" class="btn btn-success "> + Ajouter </a>
        </div>   <br> 
        </tbody>
    </table>
    
    </div>
    </div>
            <!-- /form-panel -->
    </div>
          <!-- /col-lg-12 -->
    </div>
         
{% endblock %}
