{% extends 'entreprise/userPro.html.twig' %}

{% block title %}HoraireTravail index{% endblock %}

{% block body %}
     <div class="col-lg-12"> 

<div class="card bg-gray-100 mb-20 d-inline-block col-lg-12 " style="max-width: 29rm;">
<br>
    <h1> Les Horaires Travail</h1> <br>

     <div style="display: flex; font-size: large;"> 
             <a href="{{ path('horaire_travail_new_front', {id: app.user.id } )}}" class="btn btn-outline-success">  + Ajouter </a>
             </div> <Br> 
    <table class="table table-hover">
  <thead>
    
                <th>Jours</th>
                <th>Heure Debut Matin</th>
                <th>Heure Fin Matin</th>
                <th>Heure Debut Ap</th>
                <th>Heure Fin Ap</th>
                <th>actions</th>
            </tr>
       
  <tbody>
    {% for horaire_travail in horaire_travails %}
