                <td>{{ horaire_travail.jours }}</td>
                <td>{{ horaire_travail.heureDebutMatin }}</td>
                <td>{{ horaire_travail.heureFinMatin }}</td>
                <td>{{ horaire_travail.heureDebutAp }}</td>
                <td>{{ horaire_travail.heureFinAp }}</td>
                
                <td>
                   <div style="display: flex; font-size: large;">
                        <a href="{{ path('horaire_travail_edit_front', {'id': horaire_travail.id}) }}" class=" btn btn-outline-warning" >Modifier</a>
                    </td> <td>   <form method="post" action="{{ path('horaire_travail_delete_front', {'id': horaire_travail.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ horaire_travail.id) }}">
